  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "Requests/sec",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          },
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "options": {
        "legend": {"calcs": ["mean", "max"], "displayMode": "table", "placement": "right"}
      },
      "targets": [
        {
          "expr": "rate(api_requests_total[5m])",
          "legendFormat": "{{path}} - {{method}}",
          "refId": "A"
        }
      ],
      "title": "API Request Rate by Endpoint",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.005},
              {"color": "red", "value": 0.01}
            ]
          },
          "unit": "percentunit"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "id": 2,
      "options": {
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "values": false},
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "rate(api_requests_total{status=~\"5..\"}[5m]) / rate(api_requests_total[5m])",
          "legendFormat": "5xx Error Rate",
          "refId": "A"
        }
      ],
      "title": "API Error Rate (5xx)",
      "type": "gauge"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "Latency (seconds)",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 18, "x": 0, "y": 8},
      "id": 3,
      "options": {
        "legend": {"calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom"}
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(api_request_latency_seconds_bucket[5m]))",
          "legendFormat": "p50 - {{path}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(api_request_latency_seconds_bucket[5m]))",
          "legendFormat": "p95 - {{path}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(api_request_latency_seconds_bucket[5m]))",
          "legendFormat": "p99 - {{path}}",
          "refId": "C"
        }
      ],
      "title": "API Latency Percentiles",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "bars", "fillOpacity": 80, "lineWidth": 0},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "id": 4,
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      },
      "targets": [
        {
          "expr": "topk(10, sum by (path) (rate(api_requests_total[5m])))",
          "legendFormat": "{{path}}",
          "refId": "A"
        }
      ],
      "title": "Top 10 API Endpoints by Traffic",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "fillOpacity": 10, "lineWidth": 2}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "id": 5,
      "targets": [
        {
          "expr": "sum by (status) (rate(api_requests_total[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "title": "API Response Status Codes",
      "type": "timeseries"
    }
